.goods{
  background-color: #e0e0e0;
  width: 100%;
  height: 100vh;
  position: relative;
}
/* 图片 */
.goodsdetail{
  padding: 20rpx;
  background-color: white;
}
.goodsdetail image{
  width: 100%;
  height: 400rpx;
}
/* 食品名称 */
.goodsname{
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
}
.goodsname text{
  margin-left: 20rpx;
  font-weight: bold;
}
/* 评论 */
.comment{
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
}
.comment text{
  margin-left: 20rpx;
  color: #c7c4c4;
}
/* 商品详情 */
.details{
  margin: 20rpx 0;
  height: 80rpx;
  line-height: 80rpx;
  background-color: white;
}
.details text{
  margin-left: 20rpx;
  color: #c7c4c4;
}
/* 加入购物车 */
.buycar{
  position: absolute;
  left: 0;
  bottom: 0;
  height: 100rpx;
  background-color: white;
  width: 100%;
  line-height: 100rpx;
  display: flex;
  padding-left: 250rpx;
}
.buycar .car image{
  width: 80rpx;
  height: 80rpx;
}
.carbtn{
margin-top: 10rpx;
}